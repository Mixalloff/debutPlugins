{
    "name": "@debut/plugins",
    "private": true,
    "description": "Official Debut plugins store",
    "scripts": {
        "build": "npm run build --workspaces",
        "install": "npm i --workspaces"
    },
    "author": "Dmitry Yurov",
    "license": "Apache-2.0",
    "workspaces": [
        "./packages/*"
    ],
    "devDependencies": {
        "@debut/types": "^1.0.1",
        "@types/node": "^14.14.22",
        "@types/node-telegram-bot-api": "^0.51.0",
        "@types/ws": "^7.4.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "fast-glob": "^3.2.5",
        "git-format-staged": "^2.1.1",
        "husky": "^4.3.8",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3"
    },
    "engines": {
        "npm": "^7.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "git-format-staged -f 'prettier --stdin --stdin-filepath \"{}\"' '*.ts' '*.json'"
        }
    }
}
